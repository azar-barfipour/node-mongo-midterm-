<%- include("_header") %>
<h5 class="mt-4 mb-4">Share your comment</h5>

<form action="/comment/<%= module.ID %>" method="post">
  <div class="form-horizontal">
    <div class="form-group row">
      <div class="col-sm-8">
        <textarea
          type="text"
          name="Title"
          class="form-control"
          cols="5"
          rows="5"
        ></textarea>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <input
          type="submit"
          value="Create comment"
          class="btn btn-default btn-dark"
        />
        <a href="/" class="btn btn-outline-dark">Cancel</a>
      </div>
    </div>
  </div>
</form>

<%- include("_footer") %>
